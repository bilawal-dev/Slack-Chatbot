generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  threads   Thread[]
}

model Thread {
  id            String   @id @default(cuid())
  user          User     @relation(fields: [userId], references: [id])
  userId        String
  listId        String // This represents a location under a franchise
  folderId      String // This represents a franchise
  name          String? @default("New Thread")
  slackThreadTs String? @unique // Slackâ€™s thread key, can be optional initially
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  messages      Message[]
}

model Message {
  id        String   @id @default(cuid())
  text      String
  sender    String // "USER" or "AGENT"
  thread    Thread   @relation(fields: [threadId], references: [id], onDelete: Cascade)
  threadId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
